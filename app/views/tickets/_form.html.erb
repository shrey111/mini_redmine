<%= simple_form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<% #= f.input :status %>
<%= f.input :status, collection: Ticket::STATUS ,prompt: "Assign status" %> 
<%= f.association :user, collection: User.all, prompt: "Assign a user" %>
<%= f.input :title %>
<%= f.input :priority ,collection: Ticket::PRIORITIES ,prompt: "Set Priority" %>
<%#= current_user.id %>

<%= f.input :description %>
<%= f.input :type %>
<% if params[:car].present? %>
<%= f.hidden_field :project_id, value: params[:car]  %>
<% else %> 

<%= f.association :project, collection: Project.all ,prompt: "Assign a Project id" %>
<% end %>
<h3>comments</h3>
  <div id='comments'>
   
      <%= f.simple_fields_for :comments do |comment| %>
        <%= render 'comment_fields', :f => comment %>
      <% end %>

    <div class='links'>
      <%= link_to_add_association 'add comment', f, :comments %>
    </div>

  </div>
  <%= f.button :submit %>
<% end %>
