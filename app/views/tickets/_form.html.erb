<%= simple_form_for(@ticket) do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:
      </h2>

      <ul>
        <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= current_user.id %>
<%= f.input :status, collection: Ticket::STATUS  ,include_blank: false %> 
<%#= f.association :user, collection_select: User.all, prompt: "Assign a user" %>
<%= f.association :user ,prompt: "choose a user" ,label: "Assigned to" ,include_blank: false%>
<%= f.association :watchers %><br>
<%#=f.collection_select(:watchers, User.all, :id, :name,{}, :multiple => true) %>

<%= f.input :title %>
<%= f.input :priority ,collection: Ticket::PRIORITIES ,include_blank: false %>
<%#= current_user.id %>

<%= f.input :description %>
<%= f.input :tracker , collection: Ticket::TRACKER , include_blank: false %>
<%= f.hidden_field :project_id, value: params[:proj]  %>
<%= f.hidden_field :assignee_id, value: current_user.id  %>

<h3>comments</h3>
  <div id='comments'>
   
      <%= f.simple_fields_for :comments do |comment| %>
        <%= render 'comment_fields', :f => comment %>
      <% end %>

    <div class='links'>
      <%= link_to_add_association 'add comment', f, :comments %>
    </div>

  </div>
  <%= f.button :submit %>
<% end %>
